<%= form_for(book) do |f| %>
<!-- パーシャル内はローカル変数を使うことで他のビューを変更する際などにも適用できる。逆に@bookのようにインスタンス変数で定義しても動くことは動くが、他のビューを編集する際に編集に手間がかかる -->
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, class: "book_body" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
